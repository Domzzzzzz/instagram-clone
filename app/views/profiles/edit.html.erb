<div class="posts-wrapper">
  <div class="post">
    <div class="post-body">
      <div class="image-wrap">
        <%= form_for @user, url: {action: 'update'}, html: {multipart: true} do |f| %>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group text-center">
                <h4>Change your profile pic</h4> <br>
                <div class="img-circle profile-image">
                  <%= profile_avatar_select(@user) %>
                </div> <br>
                <label class="btn btn-primary btn-file">
                  <span class="fa fa-image"></span> Choose Image<%= f.file_field :avatar, style: 'display:none;', onChange: 'loadFile(event)' %>
                </label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group text-center">
                <h4>Update your bio</h4>
                <%= f.text_area :bio, label: false, rows: 4, placeholder: 'Write a short bio about yourself', class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="form-group text-center">
            <%= f.submit 'Update Profile', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
