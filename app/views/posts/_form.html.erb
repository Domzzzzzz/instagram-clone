<div class="posts-wrapper">
  <div class="post">
    <div class="post-body">
      <div class="image-wrap">
        <%= form_image_select(@post) %>
        <%= form_for @post, html: { multipart: true } do |f| %>

        <% if @post.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

          <div class="container-fluid">
            <div class="form-group text-center">
              <h4>Upload an image</h4>
              <label class="btn btn-primary btn-file">
                <span class="fa fa-image"></span> Choose Image<%= f.file_field :image, style: 'display:none;', onChange: 'loadFile(event)' %>
              </label>
            </div>
            <div class="form-group text-center">
              <%= f.text_field :caption, placeholder: 'Add a caption', class: 'form-control' %>
            </div>
            <div class="form-group actions text-center">
              <%= f.submit 'Submit', class: 'btn-success btn-block' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
